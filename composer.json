{
    "name": "schneider/gra-adobe-commerce-bare",
    "description": "Bare Adobe Commerce (GRA-aligned) installation template",
    "type": "project",
    "license": "proprietary",
    "authors": [
        { "name": "Schneider Electric", "email": "admin@se.com" }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://repo.magento.com/"
        }
    ],
    "require": {
        "php": "^8.2 || ^8.3",
        "magento/product-enterprise-edition": "2.4.7-p7",
        "composer-runtime-api": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "friendsofphp/php-cs-fixer": "^3.58",
        "squizlabs/php_codesniffer": "^3.10"
    },
    "autoload": {
        "psr-4": {
            "Schneider\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Schneider\\Tests\\": "tests/"
        }
    },
    "extra": {
        "magento-force": "override",
        "composer-exit-on-patch-failure": true
    },
    "config": {
        "allow-plugins": {
            "laminas/laminas-dependency-plugin": true,
            "magento/composer-dependency-version-audit-plugin": true,
            "magento/inventory-composer-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "php-http/discovery": true,
            "magento/magento-composer-installer": true,
            "magento/composer-root-update-plugin": true
        },
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "secure-http": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "post-create-project-cmd": [
            "@php -r \"echo 'Project created. Run composer install with your auth.json (repo.magento.com keys).'.PHP_EOL;\""
        ],
        "setup:baseline": [
            "bin/magento setup:upgrade",
            "bin/magento deploy:mode:set production -s",
            "bin/magento cache:enable",
            "bin/magento cache:flush"
        ],
        "cs:fix": [
            "php-cs-fixer fix --allow-risky=yes"
        ],
        "lint": [
            "phpcs --standard=PSR12 app/code/ src/"
        ]
    }
}
